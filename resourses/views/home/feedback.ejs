<div class="container-fluid p-0">

	<div class="row">
		<div class="col-12 col-xl-10 ml-5 mt-5">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Add Expence</h5>
					<!-- <h6 class="card-subtitle text-muted">.</h6> -->
				</div>
				<div class="card-body">
					<form id="feedbackform" action="/feedback">
						<div class="form-group">
							<label class="form-label">Email</label>
							<input type="email" name="email" id="email" value="<%= loginuser %>" class="form-control" placeholder="Enter Email" readonly required>
						</div>
						<div class="form-group">
							<label class="form-label">Enter Name*</label>
							<input type="text" name="name" id="name" class="form-control" placeholder="Enter Name" required>
                        </div>
                        <div class="form-group">
							<label class="form-label">Enter Titlee*</label>
							<input type="text" name="title" id="title" class="form-control" placeholder="Enter Title" required>
						</div>
						<div class="form-group">
							<label class="form-label w-100">Select Ratting*</label>
							<select name="ratting" class="form-control" id="ratting" required>
								<option value="" selected disabled>---------------- Selected Ratting-----------------</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
							</select>
						</div>
						<div class="form-group">
							<label class="form-label">Enter Feedback*</label>
							<textarea class="form-control" name="feedback" id="feedback" placeholder="Enter feedback" rows="5" required></textarea>
						</div>
						<button type="submit" class="btn btn-primary">Send</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

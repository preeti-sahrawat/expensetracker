<div class="container-fluid p-0">

	<div class="row">
		<div class="col-12 col-xl-10 ml-5 mt-5">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Add Company</h5>
					<!-- <h6 class="card-subtitle text-muted">.</h6> -->
				</div>
				<div class="card-body">
					<form id="addCompanyForm" action="/api/addcompany" enctype="multipart/form-data">
						<div class="form-group">
							<label class="form-label">Enter Company name *</label>
							<input type="text" name="companyname" id="companyname" class="form-control" placeholder="Enter Company name" >
						</div>
						<div class="form-group">
							<label class="form-label">Enter salery*</label>
							<input type="number" name="salery" id="salery" class="form-control" placeholder="Enter salery" >
						</div>
					
						<div class="form-group">
							<label class="form-label">Enter Joining date*</label>
							<input type="date" name="joindate" id="joindate" class="form-control" placeholder="Enter joining date" >
						</div>

						<div class="form-group">
							<label class="form-label">Enter degination *</label>
							<input type="text" name="degination" id="degination" class="form-control" placeholder="Enter degination" >
						</div>
						
						<div class="form-group">
							<label class="form-label">Uploads letter</label>
							<input type="file" name="docs" id="docs" class="form-control">
						</div>
						<div class="form-group">
							<label class="form-label">Enter remark</label>
							<textarea class="form-control" name="remark" id="remark" placeholder="Enter remark" rows="5"></textarea>
						</div>

						<button type="submit" id="addCompanybtn" class="btn btn-primary">Add Company</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
